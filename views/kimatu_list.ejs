<!Doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>所持キャラ一覧</title>
</head>

<body>
    <h2>所持キャラ一覧</h2>
    <table>
        <tr>
            <th>ID</th>
            <th>名前</th>
            <th>タイプ</th>
        </tr>
        <% let number = 0 %>
        <% for( let row of data ) { %>
            <tr>
                <td>
                    <%= row.id %>
                </td>
                <td>
                    <a href="/kimatu_detail/<%= row.id %>"><%= row.name %></a>
                </td>
                <td>
                    <%= row.type %>
                </td>
            </tr>
            <% number += 1 %>
        <% } %>
    </table>
    <a href="/kimatu_new.html">キャラクターを追加する</a><br>
    <a href="/kimatu_home">ホームに戻る</a>
</body>

</html>